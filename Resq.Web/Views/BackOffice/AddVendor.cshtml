@model Resq.Web.ViewModels.CreateVendorViewModel
@{
    ViewData["Title"] = "AddVendor";
    Layout = "~/Views/Shared/_LayoutServices.cshtml";
}

<div class="main-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 mt-4">
                <h4>Add Vendor</h4>
            </div>
        </div>
        <div class="row my-4">
            <div class="col-lg-12">
                <div class="add-service-div p-5">
                    <div>
                        <h4 class="text-danger">@ViewBag.Response</h4>
                        <h4 class="text-success">@ViewBag.Success</h4>
                        <h5>Fill in the fields below to add a new vendor</h5>
                    </div>
                    <form asp-action="AddVendor" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-lg-6 mt-4">
                                <div class="form-group">
                                    <label for="Service-category">Select Service Category <span class="text-danger">*</span></label>
                                    <select asp-for="ServiceName" class="input-field" asp-items="@ViewBag.ServiceName">
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="Service-name">
                                        First Name <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="FirstName" type="text" class="input-field"
                                           placeholder="Enter the name of the service to be added">
                                </div>
                            </div>
                            <div class="col-lg-6 mt-4">
                                <div class="form-group">
                                    <label for="">Upload Passport Photograph *</label>
                                    <input type="file" class="d-none" id="fileUpload" asp-for="VendorPicture" required="required" />
                                    <a class="btn btn-upload-img d-flex flex-column justify-content-center align-items-center" id="openFileUpload">
                                        <div><img src="~/dashboard/assets/images/uploadIcon.svg" alt=""></div>
                                        <div class="px-2 text-blue">Upload photo</div>
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 mt-3">
                                <div class="form-group">
                                    <label for="Service-name">Middle Name <span class="text-danger">*</span></label>
                                    <input type="text" class="input-field" placeholder="Enter the name of the service to be added" asp-for="MiddleName">
                                </div>
                            </div>
                            <div class="col-lg-6 mt-3">
                                <div class="form-group">
                                    <label for="Service-name">Last Name <span class="text-danger">*</span></label>
                                    <input asp-for="LastName" type="text" class="input-field" placeholder="Enter the name of the service to be added">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-6 mt-3">
                                <div class="form-group">
                                    <label for="Service-name">Gender <span class="text-danger">*</span></label>
                                    <select>
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-lg-6 mt-3">
                                <div class="form-group">
                                    <label for="Service-name">Next Of Kin Email <span class="text-danger">*</span></label>
                                    <input asp-for="NextOfKinEmail" type="text" class="input-field" placeholder="Enter next of kin email">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 mt-3">
                                <div class="form-group">
                                    <label for="Service-name">Phone Number<span class="text-danger">*</span></label>
                                    <input type="text" asp-for="PhoneNo" class="input-field" placeholder="Enter the name of the service to be added">
                                </div>
                            </div>
                            <div class="col-lg-6 mt-3">
                                <div class="form-group">
                                    <label for="Service-name">Email Address <span class="text-danger">*</span></label>
                                    <input type="text" asp-for="EmailAddress" class="input-field" placeholder="Enter the name of the service to be added">
                                </div>
                            </div>
                        </div>


                        <div class="row">
                            <div class="col-lg-6 mt-3">
                                <div class="form-group">
                                    <label for="Service-name">Contact Address<span class="text-danger">*</span></label>
                                    <input type="text" asp-for="ContactAddress" class="input-field" placeholder="Enter the name of the service to be added">
                                </div>
                            </div>
                            <div class="col-lg-6 mt-3">
                                <div class="form-group">
                                    <label for="Service-name">Means of Identification <span class="text-danger">*</span></label>
                                    @*<input type="text" class="input-field" placeholder="Enter the name of the service to be added">*@

                                    <select class="input-field" asp-for="MeansOfIdentification">
                                        <option value="International Passport">International Passport</option>
                                        <option value="National Identity Card">National Identity Card</option>
                                        <option value="Voters Card">Voters Card</option>
                                        <option value="Driver License">Driver License</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 mt-3">
                                <div class="form-group">
                                    <label for="Service-name">Identification Number<span class="text-danger">*</span></label>
                                    <input type="text" asp-for="IdentificationNumber" class="input-field" placeholder="Enter the name of the service to be added">
                                </div>
                            </div>
                            <div class="col-lg-6 mt-3">
                                <div class="form-group">
                                    <label for="Service-name">Company Name<span class="text-danger">*</span></label>
                                    <input type="text" asp-for="CompanyName" class="input-field" placeholder="Enter the name of the service to be added">
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-6 mt-3">
                                <div class="form-group">
                                    <label for="Service-name">Full Name of Next of Kin <span class="text-danger">*</span></label>
                                    <input type="text" class="input-field" asp-for="NextOfKinName" placeholder="Enter the name of the service to be added">
                                </div>
                            </div>

                            <div class="col-lg-6 mt-3">
                                <div class="form-group">
                                    <label for="Service-name">Next Of Kin Relationship <span class="text-danger">*</span></label>
                                    <input type="text" class="input-field" asp-for="NextOfKinRelationship" placeholder="Enter the name of the service to be added">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 mt-3">
                                <div class="form-group">
                                    <label for="Service-name">Phone Number of Next of Kin<span class="text-danger">*</span></label>
                                    <input type="text" class="input-field" asp-for="NextOfKinPhone" placeholder="Enter the name of the service to be added">
                                </div>
                            </div>
                            <div class="col-lg-6 mt-3">
                                <div class="form-group">
                                    <label for="Service-name">Contact Address of Next of Kin <span class="text-danger">*</span></label>
                                    <input type="text" class="input-field" asp-for="NextOfKinAddress" placeholder="Enter the name of the service to be added">
                                </div>
                            </div>
                        </div>
                        <div class="row justify-content-center mt-5">
                            <div class="col-lg-5">
                                <button class="btn btn-services mt-3">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
