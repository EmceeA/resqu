@model Resqu.Core.Dto.UserLoginDto
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}


    <div class="page-wrapper bg-white position-relative">
        <div class="position-absolute">
            <img src="~/dashboard/assets/images/login-background.png" class="img-fluid" alt="" style="top:0;">
        </div>
        <!-- MAIN CONTENT-->
        <div class="main-content bg-white">
            <div class="container-fluid">
                <div class="row mt-4">
                    <div class="col-lg-12">
                        <img src="~/dashboard/assets/images/rezQ-logo.svg" class="img-fluid" alt="">
                    </div>
                </div>
                <div class="row mt-120 justify-content-around align-items-center">
                    <div class="col-lg-4 mt-5">
                        <h1 class="font-lg">Connecting All With Service Providers Via</h1>
                        <img src="~/dashboard/assets/images/resqAppImg.svg" class="img-fluid" alt="">
                    </div>
                    <div class="col-lg-4 mt-5">
                        <form action="Login" method="post">
                            <div><h5 class="text-warning">@ViewBag.Message</h5></div>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label for="username">Username</label>
                                <input type="text" asp-for="UserName" class="input-field">
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-4">
                                <label for="password">Password</label>
                                <input type="password" asp-for="Password" class="input-field">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <a href="#" class="d-flex justify-content-end text-dark font-sm2">
                                Forgot password?
                            </a>
                            <div class="form-group mt-5">
                                <input type="submit" class="btn btn-login" value="LOGIN">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- END MAIN CONTENT-->

    </div>

