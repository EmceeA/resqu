@model IEnumerable<Resqu.Core.Entities.ProductVendor>
@using Resq.Web.ViewModels
@{
    ViewData["Title"] = "SearchProductVendors";
    Layout = "~/Views/Shared/_LayoutServices.cshtml";
}

<style>
    @@media screen and (min-width: 676px) {
        .modal-dialog {
            max-width: 1500px;
            /* New width for default modal */
        }
    }
</style>
<div class="main-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 mt-4">
                <h4>Product Vendors</h4>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-lg-12">
                <div class="bg-white add-service-div p-4">
                    <div class="row align-items-center justify-content-between">
                        <div class="col-lg-4 col-xl-3">
                            
                        </div>
                        <div class="col-lg-3 col-xl-2">
                            <a href="../../BackOffice/CreateProductVendor" target="_blank" class="btn btn-addNewVendor d-flex justify-content-between align-items-center px-4">
                                <span class="px-2 col-lg-4">Add new<br /> product Vendor</span>
                                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 48 48">
                                    <g id="Group_4794" data-name="Group 4794" transform="translate(-217 -163)">
                                        <circle id="Ellipse_376" data-name="Ellipse 376" cx="24" cy="24" r="24" transform="translate(217 163)"
                                                fill="#5fb47d" />
                                        <text id="_" data-name="+" transform="translate(232 199)" fill="#fff" font-size="35"
                                              font-family="Effra-Regular, Effra">
                                            <tspan x="0" y="0">+</tspan>
                                        </text>
                                    </g>
                                </svg>
                            </a>
                        </div>
                        <div class="col-lg-5 col-xl-5">

                            
                            @{
                                var models = new SearchVendorViewModel();
                                await Html.RenderPartialAsync("_SearchBarProductPartial", models);

                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-lg-12">
                <div class="bg-white py-5 mb-5">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>Vendor Name</th>
                                    <th>Vendor Address</th>
                                    <th>Vendor Phone</th>
                                    <th>Date Created</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {


                                    <tr>
                                        <td>
                                            @item.VendorName
                                        </td>

                                        <td>@item.VendorAddress</td>
                                        <td>@item.VendorPhone</td>
                                        <td>@item.DateCreated</td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

