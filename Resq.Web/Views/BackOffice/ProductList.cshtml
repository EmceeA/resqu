@model IEnumerable<Resqu.Core.Dto.ProductListDtos>
@{
    ViewData["Title"] = "ProductList";
    Layout = "~/Views/Shared/_LayoutServices.cshtml";
}
<style>
        @@media screen and (min-width: 676px) {
            .modal-dialog {
                max-width: 1500px;
                /* New width for default modal */
            }
        }
</style>
<div class="main-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 mt-4">
                <h4>Products</h4>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-lg-12">
                <div class="bg-white add-service-div p-4">
                    <div class="row align-items-center justify-content-between">
                        <div class="col-lg-4 col-xl-3">
                            @*<div class="row align-items-center">
                                <div class="col-lg-3">
                                    <h6>Filter:</h6>
                                </div>
                                <div class="col-lg-6 col-xl-5 px-0">
                                    <div class="form-group mb-0">
                                        <select class="filter-field"></select>
                                    </div>
                                </div>
                            </div>*@
                        </div>
                        <div class="col-lg-3 col-xl-2">
                            <a href="../../BackOffice/CreateProduct" target="_blank" class="btn btn-addNewVendor d-flex justify-content-between align-items-center px-4">
                                <span class="px-2 col-lg-4">Add new<br /> product</span>
                                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 48 48">
                                    <g id="Group_4794" data-name="Group 4794" transform="translate(-217 -163)">
                                        <circle id="Ellipse_376" data-name="Ellipse 376" cx="24" cy="24" r="24" transform="translate(217 163)"
                                                fill="#5fb47d" />
                                        <text id="_" data-name="+" transform="translate(232 199)" fill="#fff" font-size="35"
                                              font-family="Effra-Regular, Effra">
                                            <tspan x="0" y="0">+</tspan>
                                        </text>
                                    </g>
                                </svg>
                            </a>
                        </div>
                        <div class="col-lg-5 col-xl-5">
                            @*<div class="row">
                                <div class="col-lg-8">
                                    <input type="text" class="input-field-search">
                                </div>
                                <div class="col-lg-4">
                                    <button class="btn btn-search">Search</button>
                                </div>
                            </div>*@
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-lg-12">
                <div class="bg-white py-5 mb-5">
                    <div class="table-responsive">
                        <table class="table table-vendors" id="table_id">
                            <thead>
                                <tr>
                                    <th>S/N</th>
                                    <th>Product Image</th>
                                    <th>Product ID</th>
                                    <th>Service Category</th>
                                    <th>Product Name</th>
                                    <th>Item Amount</th>
                                    <th>Date Created</th>
                                    <th>Distributor</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @{int index = 0;}
                                @foreach (var item in Model)
                                {


                                    <tr>
                                        <td>
                                            @{index++;}
                                                                                @index
                                                                            </td>
                                        <td><img src="~/images/@item.ProductImage" class="img-fluid" alt="" width="59" height="41"></td>
                                        <td>@item.Id</td>
                                        <td>@item.ProductCategory</td>
                                        <td>@item.ProductName</td>
                                        <td>NGN @item.ProductPrice</td>
                                        <td>@item.DateCreated</td>
                                        <td>@item.VendorName</td>
                                        @if (item.Quantity > 0)
                                        {
                                            <td><div class="available-status">Available</div></td>

                                        }
                                        else
                                        {
                                            <td><div class="available-status">Not Available</div></td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>