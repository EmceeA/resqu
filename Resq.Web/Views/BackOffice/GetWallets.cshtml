@model IEnumerable<Resqu.Core.Dto.WalletDto>
@using Resq.Web.ViewModels 
@{
    ViewData["Title"] = "GetWallets";
    Layout = "~/Views/Shared/_LayoutServices.cshtml";
}

<style>
    @@media screen and (min-width: 676px) {
        .modal-dialog {
            max-width: 1500px;
            /* New width for default modal */
        }
    }
</style>
<div class="main-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 mt-4">
                <h4>List of Wallets</h4><br />  
                <h4 class="text-center text-capitalize">Total Wallets : @Model.Count()</h4>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-lg-12">
                <div class="bg-white add-service-div p-4">
                    <div class="row align-items-center justify-content-between">
                        <div class="col-lg-4 col-xl-3">
                            @{
                                var models = new SearchWalletViewModel();
                                await Html.RenderPartialAsync("_SearchBarPartial", models);

                                }
                        </div>
                        
                        <div class="col-lg-5 col-xl-5">
                         
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-lg-12">
                <div class="bg-white py-5 mb-5">
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>
                                        Customer Name
                                    </th>
                                    <th>
                                        Wallet Id
                                    </th>
                                    <th>
                                        Wallet Balance
                                    </th>
                                   
                                    <th>
                                        Mobile No.
                                    </th>
                                    <th>
                                       Dedicated Nuban
                                    </th>
                                    <th>
                                        Bank Name
                                    </th>
                                    <th>
                                        Account Name
                                    </th>
                                    
                                    <th>
                                        Customer Code
                                    </th>

                                    
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {


                                    <tr>
                                        <td>
                                            @item.CustomerName
                                        </td>

                                        <td>@item.WalletId</td>
                                        <td>@item.Balance</td>
                                        <td>@item.PhoneNumber</td>
                                        <td>@item.DedicatedNuban</td>
                                        <td>@item.Bank</td>
                                        <td>@item.AccountName</td>
                                        <td>@item.CustomerCode</td>
                                       
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


