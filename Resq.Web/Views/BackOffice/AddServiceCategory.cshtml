@model Resqu.Core.Entities.CustomerRequestService

@{
    ViewData["Title"] = "AddServiceCategory";
    Layout = "~/Views/Shared/_LayoutServices.cshtml";
}


<div class="row">
    <div class="col-md-4">
        <form asp-action="AddServiceCategory">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ServiceName" class="control-label"></label>
                <input asp-for="ServiceName" class="form-control" />
                <span asp-validation-for="ServiceName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


