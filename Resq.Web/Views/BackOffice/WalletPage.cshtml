@using Resqu.Core.Entities
@{
    ViewData["Title"] = "WalletPage";
    Layout = "~/Views/Shared/_LayoutServices.cshtml";
}

<div class="main-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 mt-4">
                <h4>Wallet</h4>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-lg-5 col-xl-4">
                <div class="wallet-div">
                    <h2 class="text-light">N @ViewBag.OverallWalletBalance</h2>
                    <h5 class="text-light mt-4">Available Wallet Balance</h5>
                </div>
            </div>
        </div>

        <div class="row justify-content-between align-items-center">
            <div class="col-xl-5 col-lg-12 mt-4">
                <h5>Wallet Balance History</h5>
                <ul class="nav nav-pills nav-fill px-0 mt-3" id="myTab" role="tablist" style="border-bottom:1px solid #CCCCCC;">
                    <li class="nav-item">
                        <a class="nav-link active" id="AllTransactions-tab" data-toggle="tab" href="#AllTransactions" role="tab" aria-controls="AllTransactions"
                           aria-selected="true">All Transactions</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="DebitTransactions-tab" data-toggle="tab" href="#DebitTransactions" role="tab" aria-controls="DebitTransactions"
                           aria-selected="false">Debit Transactions</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="CreditTransactions-tab" data-toggle="tab" href="#CreditTransactions" role="tab" aria-controls="CreditTransactions"
                           aria-selected="false">Credit Transactions</a>
                    </li>
                </ul>
            </div>
            <div class="col-xl-5 col-lg-9 mt-4">
                <h5>Date (From & To)</h5>
                <div class="row mt-3">
                    <div class="col-lg-4">
                        <div class="form-group">
                            <input type="date" class="input-field-wallet">
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-group">
                            <input type="date" class="input-field-wallet">
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <button class="btn btn-wallet">Download</button>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="tab-content col-lg-12" id="myTabContent">
                    <div class="tab-pane fade show active" id="AllTransactions" role="tabpanel" aria-labelledby="AllTransactions-tab">
                        <div class="row mt-5">
                            <div class="col-lg-12">
                                <div class="table-responsive">
                                    <table class="table table-transactions">
                                        <thead></thead>
                                        <tbody>
                                            @foreach (Transaction item in ViewBag.AllTransaction)
                                            {


                                            <tr>
                                                <td><img src="~/assets/images/debitSign.svg" class="img-fluid" alt=""></td>
                                                <td>Transaction of N @item.TotalAmount from @item.CustomerName  to @item.VendorName</td>
                                                @if (item.CustomerTransactionType == "DR")
                                                {
                                                <td class="text-danger">Debit</td>
                                                }
                                                <td>@item.ServiceDate</td>
                                                <td class="text-danger">+ @item.TotalAmount</td>
                                            </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="DebitTransactions" role="tabpanel" aria-labelledby="DebitTransactions-tab">
                        <div class="row mt-5">
                            <div class="col-lg-12">
                                <div class="table-responsive">
                                    <table class="table table-transactions">
                                        <thead></thead>
                                        <tbody>
                                            @foreach (Transaction item in ViewBag.DebitTransaction)
                                            {


                                                <tr>
                                                    <td><img src="~/assets/images/debitSign.svg" class="img-fluid" alt=""></td>
                                                    <td>Transaction of N @item.TotalAmount from @item.CustomerName  to @item.VendorName</td>
                                                    @if (item.CustomerTransactionType == "DR")
                                                    {
                                                        <td class="text-danger">Debit</td>
                                                    }
                                                    <td>@item.ServiceDate</td>
                                                    <td class="text-danger">+ @item.TotalAmount</td>
                                                </tr>
                                            }
                                        
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane fade" id="CreditTransactions" role="tabpanel" aria-labelledby="CreditTransactions-tab">
                        <div class="row mt-5">
                            <div class="col-lg-12">
                                <div class="table-responsive">
                                    <table class="table table-transactions">
                                        <thead></thead>
                                        <tbody>
                                            @foreach (Transaction item in ViewBag.CreditTransaction)
                                            {


                                                <tr>
                                                    <td><img src="~/assets/images/debitSign.svg" class="img-fluid" alt=""></td>
                                                    <td>Transaction of N @item.TotalAmount from @item.CustomerName  to @item.VendorName</td>
                                                    @if (item.CustomerTransactionType == "CR")
                                                    {
                                                        <td class="text-danger">Credit</td>
                                                    }
                                                    <td>@item.ServiceDate</td>
                                                    <td class="text-danger">+ @item.TotalAmount</td>
                                                </tr>
                                            }

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>